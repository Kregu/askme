<div class="container">

  <p class="mt">
    <%= link_to "New question", new_question_path, class: 'button button-main' %>
  </p>

  <p class="mt">
    <%= render 'questions/form', question: @question %>
  </p>

</div>

<div class="container mt-sm">
  <h2 class="title-lg mb">
    <%= @questions.length %>
    <%= inclination(@questions.length, 'вопрос', 'вопроса', 'вопросов') %>
  </h2>
</div>

<% @questions.each do |question| %>
  <div class="mt-sm container">
    <%= render question %>
  </div>
<% end %>
